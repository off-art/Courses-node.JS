<h1>
  {{{title}}}
</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Title courses</label>
    <span class="helper-text" data-error="Enter title courses"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="text" class="validate" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="enter price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required>
    <label for="img">URL Picture</label>
    <span class="helper-text" data-error="Add URL Img"></span>
  </div>
  <button class="btn btn-primary">Add new courses</button>
</form>
